[
  {
    "name": "${application_service_name}-migrate",
    "image": "${backend_image_url}@${backend_digest}",
    "essential": false,
    "dockerLabels": {
      "Project": "${project}"
    },
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${application_service_name}",
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "${application_service_name}-migrate"
      }
    },
    "command": ["python", "manage.py", "migrate"],
    "workingDirectory": "/backend",
    "secrets": [
      {
        "name": "POSTGRES_DB",
        "valueFrom": "${POSTGRES_DB}"
      },
      {
        "name": "POSTGRES_USER",
        "valueFrom": "${POSTGRES_USER}"
      },
      {
        "name": "POSTGRES_PASSWORD",
        "valueFrom": "${POSTGRES_PASSWORD}"
      },
      {
        "name": "POSTGRES_HOST",
        "valueFrom": "${POSTGRES_HOST}"
      },
      {
        "name": "SECRET_KEY",
        "valueFrom": "${SECRET_KEY}"
      }
    ]
  },
  {
    "image": "${backend_image_url}@${backend_digest}",
    "essential": true,
    "dockerLabels": {
      "Project": "${project}"
    },
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${application_service_name}",
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "${application_service_name}-api"
      }
    },
    "portMappings": [
      {
        "hostPort": 8000,
        "protocol": "tcp",
        "containerPort": 8000
      }
    ],
    "dependsOn": [
      {
        "containerName": "${application_service_name}-migrate",
        "condition": "SUCCESS"
      }
    ],
    "secrets": [
      {
        "name": "POSTGRES_DB",
        "valueFrom": "${POSTGRES_DB}"
      },
      {
        "name": "POSTGRES_USER",
        "valueFrom": "${POSTGRES_USER}"
      },
      {
        "name": "POSTGRES_PASSWORD",
        "valueFrom": "${POSTGRES_PASSWORD}"
      },
      {
        "name": "POSTGRES_HOST",
        "valueFrom": "${POSTGRES_HOST}"
      },
      {
        "name": "MAIN_DOMAIN",
        "valueFrom": "${MAIN_DOMAIN}"
      },
      {
        "name": "API_DOMAIN",
        "valueFrom": "${API_DOMAIN}"
      },
      {
        "name": "AUTH_DOMAIN",
        "valueFrom": "${AUTH_DOMAIN}"
      },
      {
        "name": "SECRET_KEY",
        "valueFrom": "${SECRET_KEY}"
      }
    ]
  },
  {
    "name": "${application_service_name}-frontend",
    "image": "${frontend_image_url}@${frontend_digest}",
    "essential": true,
    "dockerLabels": {
      "Project": "${project}"
    },
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${application_service_name}",
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "${application_service_name}-frontend"
      }
    },
    "secrets": [
      {
        "name": "MAIN_DOMAIN",
        "valueFrom": "${MAIN_DOMAIN}"
      },
      {
        "name": "NGINX_SSL_CERT",
        "valueFrom": "${NGINX_SSL_CERT}"
      },
      {
        "name": "NGINX_SSL_KEY",
        "valueFrom": "${NGINX_SSL_KEY}"
      },
      {
        "name": "API_DOMAIN",
        "valueFrom": "${API_DOMAIN}"
      },
      {
        "name": "AUTH_DOMAIN",
        "valueFrom": "${AUTH_DOMAIN}"
      },
      {
        "name": "BACKEND_PROXY",
        "valueFrom": "${BACKEND_PROXY}"
      }
    ],
    "portMappings": [
      {
        "hostPort": 443,
        "protocol": "tcp",
        "containerPort": 443
      }
    ]
  }
]
